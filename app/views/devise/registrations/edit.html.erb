<h2>Edit <%= resource_name.to_s.humanize %></h2><br>

<%= flash[:error] %>

<%= bootstrap_form_for(@user, layout: :inline, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, hide_label: true %>
  </div>

  <input name="id" value=<%=@user.id%> hidden>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :new_password %><br />
    <%= f.password_field :password, autocomplete: "off", hide_label: true %>
  </div>

  <div class="field">
    <%= f.label :confirm_new_password %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", hide_label: true %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<br>
    <% if current_user.demographic.nil? %>
    <p><%= link_to 'Add My Demographic Information', new_demographic_path %></p>
    <% else %>
    <p><%= link_to 'Edit My Demographic Information', edit_demographic_path(current_user.demographic.id) %></p>
    <% end %>

<%= link_to "Back", :back %>
