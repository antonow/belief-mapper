<body>
<div>

  <!-- QUESTION DIV BEGINS HERE -->
  <div class="row">
    <!-- <div class="col-md-1"></div> -->
    <div class="col-md-3" >
    <% @belief = current_user.unexamined_beliefs.sample %>
    Do you believe <%= @belief.definition.sub(/belief /, "").sub(/doctrine /, "") + " (question id: #{@belief.id.to_s})" %>?
    </div>
  <!-- </div> -->

    <!-- CONVICTION SLIDER DIV -->
    <!-- <div class="row"> -->
    <div class="col-md-7">
    <%= form_for :user_belief, url: user_beliefs_path do |f| %>
    <% f.hidden_field :belief %>
      <input type="hidden" name="belief" value=<%=@belief.id%>>
      <input type="range" name="conviction" id="conviction" value=0 min=0 max=100 list='levels' oninput="outputUpdate(value)">
      <!-- <output for='conviction' id='level'></output> -->
      <div id='options'>
        <div class='col-lg-4 col-md-4 col-sm-4' id='1'>Not at all</div>
        <div class='col-lg-4 col-md-4 col-sm-4' id='2'>I kinda believe that</div>
        <div class='col-lg-4 col-md-4 col-sm-4' id='3'>Core belief</div>
      </div>
    </div>
    <!-- SUBMIT BUTTON DIV -->
    <div class="col-md-2">
      <button type="submit" class="btn btn-success centered">Submit</button>
    </div>
  </div>
  <script>
    function outputUpdate(level) {
      $('#1').css("font-weight", "bold")
      $('#2').css("font-weight", "normal")
      $('#2').css("font-weight", "normal")

      if (level > 95) {
        $('#1').css("font-weight", "normal")
        $('#2').css("font-weight", "normal")
        $('#3').css("font-weight", "bold")
      } else if (level > 5) {
        $('#1').css("font-weight", "normal")
        $('#2').css("font-weight", "bold")
        $('#3').css("font-weight", "normal")
      };
      // document.querySelector('#level').value = phrase;
    }
  </script>
<% end %>
</div>

<br>

<!-- PROGRESS BAR DIV BEGINS HERE -->
  <div class="row">
    <div class="progress" id="progress_bar">
      <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%=current_user.percent_answered %>;">
        <%=current_user.percent_answered %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8"><h5>Percentage of questions answered</h5></div>
    <div class="col-md-4"><h5>You've answered <%=current_user.beliefs_answered.count%> questions and hold <%=current_user.held_beliefs.count%> beliefs.</h5></div>
  </div>



<hr>
<!-- GRAPH DIV BEGINS HERE -->
<div class="row">
  <div class="col-lg-10 graph">
    <% if (defined?(@results)).nil? %>
<script>
   $(function() {
      renderD3Web();
   });
</script>
<div id="selected_node" hidden></div>
<% else %>
<%= link_to 'Return to Graph', beliefs_path %><br><br>
<% @results.each do |result| %>
<p><%= result.name + " - " + result.definition %></p>
<% end %>

<% end %>
</div>
