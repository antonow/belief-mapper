<%= link_to 'Return to Graph', beliefs_path %><br><br>

<h1> <%=@belief.name.capitalize%></h1>

<p>
  Category: <%= link_to @belief.category.name, category_path(@belief.category) %>

</p>

<p>
  Definition: <%=@belief.definition%>
</p>

<p>
  Total number of users with belief: <%=@belief.user_count %>
</p>

<p>
  Average Conviction: <%=@belief.avg_conviction.to_i%>%
</p>

<p>
  Rank: <%=@belief.rank.to_s + "/" + Belief.total_beliefs.to_s %>
</p>

<h4>Top 10 Most Closely Related Beliefs</h4>
<!-- List of top correlated beliefs -->
<% @belief.list_top_connections.each do |belief, count| %>
<p><%= link_to belief.name, belief_path(belief) %> - <%= count.to_s %></p>
<% end %>

<!-- DEMOGRAPHICS -->
<% @belief.all_the_stats.each do |category, results| %>
  <p><%= category %></p>
  <p>
<% results.each do |demographic, count| %>
  <%= demographic + " - " + count.to_s + " | " %>
  <% end %>
  </p>
<% end %>




<p>
<% @belief.all_stats_for("gender").each do |gender, count| %>
  <%= gender + " - " + count.to_s + " | " %>
<% end %>
</p>
<p>
<% @belief.all_stats_for("religion").each do |religion, count| %>
  <%= religion + " - " + count.to_s + " | " %>
<% end %>
</p>


